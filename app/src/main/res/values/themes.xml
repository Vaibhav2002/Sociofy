<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sociofy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <item name="android:colorBackground">@color/surface_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="postItem">
        <item name="android:background">@color/white</item>
    </style>


    <style name="custom_outlined_button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?attr/colorPrimaryVariant</item>
    </style>


    <style name="AppBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="bottomnavbar">
        <item name="android:background">?attr/colorSurface</item>
    </style>

    <style name="cardItem">
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>

    <style name="bottomAppBar" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="backgroundTint">?attr/colorSurface</item>


    </style>

    <style name="userListItem">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppBarText">
        <item name="android:fontFamily">@font/hachi</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Header">
        <item name="fontFamily">@font/hachi</item>
        <item name="android:textSize">33sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="myButton">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textAppearance">@style/TextAppearance.MdcTypographyStyles.Button</item>
    </style>

    <style name="secondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">20dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MdcTypographyStyles.Button</item>
        <item name="strokeColor">?attr/colorPrimary</item>
    </style>


    <style name="authTextBox">
        <item name="android:background">@drawable/inputbox</item>
        <item name="android:textAppearance">@style/TextAppearance.MdcTypographyStyles.Body1</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="descriptionBox">
        <item name="android:textAppearance">@style/TextAppearance.MdcTypographyStyles.Body1</item>
        <item name="android:background">@drawable/description_box</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.MdcTypographyStyles.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">93sp</item>
    </style>

    <style name="TextAppearance.MdcTypographyStyles.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">58sp</item>
    </style>

    <style name="TextAppearance.MdcTypographyStyles.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">46sp</item>
    </style>

    <style name="TextAppearance.MdcTypographyStyles.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">33sp</item>
    </style>

    <style name="TextAppearance.MdcTypographyStyles.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="TextAppearance.MdcTypographyStyles.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="TextAppearance.MdcTypographyStyles.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.MdcTypographyStyles.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearance.MdcTypographyStyles.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextAppearance.MdcTypographyStyles.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.MdcTypographyStyles.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.MdcTypographyStyles.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearance.MdcTypographyStyles.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/work_sans</item>
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textSize">11sp</item>
    </style>

</resources>